<% layout("/layout/boilerplate") %>
<div class="row">
<div class="col-8 offset-2">
    <br>
    <h3> Edit your Listing: </h3>
    <br>
    <form action="/listings/<%= listing._id %>?_method=put" method="post" enctype="multipart/form-data" novalidate class="needs-validation">
        <!-- name="listing[title]" -->
        <!-- listing[title] ya listing object ki aik key ban jay ga understand -->
        <div class="mb-3">
            <label for="title" class="form-label"> Title </label>
            <input type="text" name="title" id="title" required class="form-control" value="<%= listing.title %>">
            <div class="invalid-feedback">
                Please Enter Valid Title.
            </div>
            <div class="valid-feedback">
                Right Title.
            </div>
        </div>
        <div class="mb-3">
            <label for="description" class="form-label"> Description</label>
            <textarea name="description" id="description" required class="form-control"  ><%=listing.description %></textarea>
            <div class="invalid-feedback">
                Please Enter Valid Description.
            </div>
            <div class="valid-feedback">
                Right Description.
            </div>
        </div>
        <div class="mb-3">
            <p>Orignal Image </p>
            <img src="<%= orignalImageUrl%>" alt="Orignal Image Pic">
            <br>
        </div>
        <div class="mb-3">
            <label for="url" class="form-label"> Upload New Image</label>
            <input type="file" name="url" id="url" class="form-control">
        </div>
        <div class="row">
            <div class="mb-3 col-md-4">
                <label for="price" class="form-label"> Price</label>
                <input type="text" name="price" required id="price" class="form-control" value="<%= listing.price %>">
                <div class="invalid-feedback">
                    Please Enter Valid Price.
                </div>
                <div class="valid-feedback">
                    Right Price.
                </div>
            </div>
            <div class="mb-3 col-md-8">
                <label for="country" class="form-label"> Country</label>
                <input type="text" name="country" required id="country" class="form-control" value="<%= listing.country %>">
                <div class="invalid-feedback">
                    Please Enter Valid Country.
                </div>
                <div class="valid-feedback">
                    Right Country.
                </div>
            </div>
        </div> 
        <div class="mb-3 col-md-8">
            <label for="location" class="form-label"> location</label>
            <input type="text" name="location" id="location" required class="form-control" value="<%= listing.location %>">
            <div class="invalid-feedback">
                Please Enter Valid Location.
            </div>
            <div class="valid-feedback">
                Right Location.
            </div>
        </div>
        <button class="btn btn-dark edit-btn" >Edit</button>
    </form>
    <br>
</div>
</div>
